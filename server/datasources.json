{
  "infoLite": {
    "name": "infoLite",
    "connector": "sqlite",
    "file_name": "./info.db"
  },
  "forecast": {
    "name": "forecast",
    "connector": "rest"
  },
  "testbed": {
    "url": "http://testbed.fmi.fi/data/area/radar/temperature/TB_%datetime%.png",
    "name": "testbed",
    "connector": "remote"
  },
  "liveTrains": {
    "name": "liveTrains",
    "connector": "rest",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://rata.digitraffic.fi/api/v1/live-trains",
          "headers": {
            "accepts": "application/json",
            "content-type": "application/json"
          },
          "query": {
            "station": "{station}",
            "arriving_trains": "{limit=33}"
          }
        },
        "functions": {
          "findTrains": [
            "station",
            "limit"
          ]
        }
      },
      {
        "template": {
          "method": "GET",
          "url": "http://rata.digitraffic.fi/api/v1/metadata/stations",
          "headers": {
            "accepts": "application/json",
            "content-type": "application/json"
          }
        },
        "functions": {
          "findStations": []
        }
      }
    ]
  }
}
