{
  "infoLite": {
    "name": "infoLite",
    "connector": "sqlite",
    "file_name": "./info.db"
  },
  "forecast": {
    "name": "forecast",
    "connector": "rest",
    "operations": [{
      "template": {
        "method": "GET",
        "url": "http://api.openweathermap.org/data/2.5/forecast",
        "headers": {
          "accepts": "application/json",
          "content-type": "application/json"
        },
        "query": {
          "lon": "{lon}",
          "lat": "{lat}",
          "APPID": "{token}",
          "format": "{format=json}",
          "units": "{units=metric}"
        },
        "responsePath": "$.list[*]"
      },
      "functions": {
        "find": ["lat", "lon", "token"]
      }
    }]
  },
  "testbed": {
    "url": "http://testbed.fmi.fi/data/area/radar/temperature/TB_%datetime%.png",
    "name": "testbed",
    "connector": "remote"
  }
}
